{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": false,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "./**/*.test.ts",
    "webpack",
    "scripts",
    "keys",
    "src/__tests__"
  ]
}